<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">

<service_bundle type='manifest' name='mg-ddm'>

<service name='system/illumos/mg-ddm' type='service' version='1'>
  <create_default_instance enabled='false' />
  <dependency name='network' grouping='require_all' restart_on='none'
    type='service'>
  <service_fmri value='svc:/milestone/network:default' />
  </dependency>

  <exec_method type='method' name='start'
      exec='ctrun -l child -o noorphan,regent /opt/oxide/mg-ddm/bin/ddm-illumos %{config/admin_port} %{config/mode} %{config/flags} &amp;'
    timeout_seconds='0' />
  <exec_method type='method' name='stop' exec=':kill' timeout_seconds='0' />

  <property_group name='config' type='application'>
    <propval name='admin_port' type='count' value='8000' />
  </property_group>

  <property_group name='config' type='application'>
    <propval name='mode' type='astring' value='server' />
  </property_group>

  <property_group name='config' type='application'>
    <propval name='flags' type='astring' value='' />
  </property_group>

  <property_group name='startd' type='framework'>
    <propval name='duration' type='astring' value='contract' />
  </property_group>

  <stability value='Unstable' />

  <template>
    <common_name>
      <loctext xml:lang='C'>Maghemite DDM Router</loctext>
    </common_name>
    <description>
      <loctext xml:lang='C'>Router</loctext>
    </description>
  </template>
</service>

</service_bundle>
